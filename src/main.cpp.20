#include <stm32f4_discovery.h>
#include <os.h>

Led       led;
Semaphore sem;

void slave()
{
	for (;;)
	{
		sem.wait();
		led.tick();
	}
}

void master()
{
	for (;;)
	{
		ThisTask::sleepFor(SEC);
		sem.give();
	}
}

TaskT<256> sla(0, slave);
TaskT<256> mas(0, master);

int main()
{
	sla.start();
	mas.start();

	ThisTask::stop();
}
