#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();

auto sla = startTask(0, []
{
	ThisTask::action([](unsigned signo){ led = SIGSET(signo); });
	ThisTask::suspend();
});

auto mas = startTask(0, []
{
	unsigned x = 0;

	for (;;)
	{
		ThisTask::sleepFor(SEC);
		sla.signal(x);
		x = (x + 1) % 4;
	}
});

int main()
{
	ThisTask::stop();
}
