#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto box = MailBoxQueueTT<1, unsigned>();

void slave()
{
	unsigned x;

	for (;;)
	{
		box.wait(&x);
		led = x;
	}
}

void master()
{
	unsigned x = 15;

	for (;;)
	{
		ThisTask::delay(SEC);
		box.give(&x);
		x++;
	}
}

auto sla = Task(0, slave);
auto mas = Task(0, master);

int main()
{
	sla.start();
	mas.start();

	ThisTask::stop();
}
