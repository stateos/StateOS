#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto sig = Signal();

void consumer()
{
	unsigned x;

	for (;;)
	{
		sig.wait(SIGSET(1), x);
		led.tick();
	}
}

void producer()
{
	for (;;)
	{
		ThisTask::sleepFor(SEC);
		sig.give(1);
	}
}

int main()
{
	auto cons = Task::Start(0, consumer);
	auto prod = Task::Start(0, producer);

	ThisTask::sleep();
}
