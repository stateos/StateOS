#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto lst = ListTT<unsigned>();
auto mem = MemoryPoolTT<1, unsigned>();

void slave()
{
	unsigned*p;

	for (;;)
	{
		lst.wait(&p);
		led = *p;
		mem.give(p);
	}
}

void master()
{
	unsigned*p;
	unsigned x = 1;

	for (;;)
	{
		ThisTask::delay(SEC);

		mem.wait(&p);
		*p=x;
		lst.give(p);
		x = (x << 1) | (x >> 3);
	}
}

auto sla = Task(0, slave);
auto mas = Task(0, master);

int main()
{
	sla.start();
	mas.start();

	tsk_stop();
}
