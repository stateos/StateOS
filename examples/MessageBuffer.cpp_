#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto msg = MessageBufferTT<1, unsigned>();

void slave()
{
	unsigned x;

	for (;;)
	{
		msg.wait(&x);
		led = x;
	}
}

void master()
{
	unsigned x = 1;

	for (;;)
	{
		ThisTask::delay(SEC);
		msg.give(&x);
		x = (x << 1) | (x >> 3);
	}
}

auto sla = Task(0, slave);
auto mas = Task(0, master);

int main()
{
	sla.start();
	mas.start();

	tsk_stop();
}
