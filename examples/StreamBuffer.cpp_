#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto stm = StreamBufferTT<1, unsigned>();

void slave()
{
	unsigned x;

	for (;;)
	{
		stm.wait(&x, sizeof(x));
		led = x;
	}
}

void master()
{
	unsigned x = 1;

	for (;;)
	{
		ThisTask::delay(SEC);
		stm.send(&x, sizeof(x));
		x = (x << 1) | (x >> 3);
	}
}

auto sla = Task(0, slave);
auto mas = Task(0, master);

int main()
{
	sla.start();
	mas.start();

	ThisTask::stop();
}
